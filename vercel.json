{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static-build"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Rule 1: Correctly serves /arts -> /arts.html (Hides the extension)
    {
      "src": "/(backpage|arts)",
      "dest": "/$1.html"
    },
    // Rule 2: Serves all image files from the root
    {
      "src": "/images/(.*)",
      "dest": "/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    // Rule 3: Serves index.html as the default entry point for all other paths
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}